@section PagePreTitle {

    <div class="col">
        <!-- Page pre-title -->
        <div class="user-icon-container">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#A79A66" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
            </svg>
            <h2 class="page-title-home">
                Mi Perfil
            </h2>
        </div>
    </div>


}

@section PageActions {


}
@(Html.DevExtreme().DataGrid<LBW.Models.Entity.Usuario>()
    .DataSource(ds => ds.Mvc()
        .Controller("Usuarios")
        .LoadAction("Get0")
        .UpdateAction("Put")
        .Key("UsuarioID")
    )
    .ShowBorders(true)
    .Paging(p => p.Enabled(false))
     
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.NombreCompleto).Caption("Nombre");
        columns.AddFor(m => m.UsuarioID).Caption("Username");
        columns.AddFor(m => m.Password)
            .Caption("Contraseña")
            .Visible(false);  
        columns.AddFor(m => m.Correo).Caption("Correo");
        columns.AddFor(m => m.IdRol).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Usuarios").LoadAction("RolLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
            ).Caption("Rol");
        columns.AddFor(m => m.ConCopia).Caption("CC");
        columns.AddFor(m => m.Clientes).Visible(false);

 
    })
   .Editing(e => e.Mode(GridEditMode.Popup)
            .AllowUpdating(true)
            .UseIcons(true)
            .Popup(p => p
                .Title("Perfil")
                .ShowTitle(true)
                .Width(800)
                .Height(300)
            )
            .Form(f => f.Items(items =>
            {
                items.AddGroup()
                    .ColCount(2)
                    .ColSpan(2)
                    .Items(groupItems =>
                    {
                        groupItems.AddSimpleFor(m => m.NombreCompleto);
                        groupItems.AddSimpleFor(m => m.UsuarioID);
                        groupItems.AddSimple()
         
                        .Editor(editor => editor.TextBox()
                            .Mode(TextBoxMode.Password)
                        )
                        .DataField("Password");
 
                        groupItems.AddSimpleFor(m => m.Correo);
 

                    });

            }))
        )
)


<script>
    function onPasswordButtonClick(e) {
        var textBox = e.component;
        var button = e.element;

        if (textBox.option("mode") === "text") {
            textBox.option("mode", "password");
            button.option("icon", "eyeopen");
        } else {
            textBox.option("mode", "text");
            button.option("icon", "eyeslash");
        }
    }
</script>